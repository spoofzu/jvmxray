        <append>true</append>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_HOME}/agent-API-events.%d{yyyy-MM-dd}.log</fileNamePattern>
