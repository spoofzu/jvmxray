    </logger>
    <logger name="org.jvmxray.events.api" level="DEBUG" additivity="false">
        <appender-ref ref="APIEVENTS" />
    </logger>
    <!-- Data transfer events now handled by file I/O aggregate statistics -->
    <logger name="org.jvmxray.events.data" level="OFF" additivity="false">
        <appender-ref ref="DATAEVENTS" />
    </logger>
    <logger name="org.jvmxray.events.reflection" level="DEBUG" additivity="false">
        <appender-ref ref="REFLECTIONEVENTS" />
    </logger>

    <!-- Catch org.jvmxray* to see if we snag other xray projects. -->
    <logger name="org.jvmxray" level="DEBUG" additivity="false">
        <appender-ref ref="PLATFORM" />
    </logger>

    <root level="ERROR">
    </root>

</configuration>